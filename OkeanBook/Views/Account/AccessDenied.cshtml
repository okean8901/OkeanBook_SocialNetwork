@{
    ViewData["Title"] = "Truy cập bị từ chối";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body p-5 text-center">
                <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                <h2 class="mt-3">Truy cập bị từ chối</h2>
                <p class="text-muted">Bạn không có quyền truy cập vào trang này.</p>
                
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                        <i class="fas fa-home me-1"></i>Về trang chủ
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

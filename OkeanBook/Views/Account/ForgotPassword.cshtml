@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <img src="~/img/logo.jpg" alt="OkeanBook" width="80" height="80" class="rounded-circle mb-3">
                    <h3 class="card-title">Quên mật khẩu</h3>
                    <p class="text-muted">Nhập email để nhận hướng dẫn đặt lại mật khẩu</p>
                </div>

                <form asp-action="ForgotPassword" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" name="email" id="email" class="form-control" placeholder="Nhập email của bạn" required />
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Gửi hướng dẫn
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p>
                        <a asp-action="Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại đăng nhập
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
